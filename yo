export class App {
  projectForm: FormGroup;
  projectMembers: ProjectMember[] = [];
  selectedUser: User | null = null;
  selectedRole: Role | null = null;

  availableUsers: User[] = [
    { id: 1, name: 'Alice Dupont' },
    { id: 2, name: 'Bob Martin' },
    { id: 3, name: 'Claire Bernard' },
    { id: 4, name: 'David Leroux' },
    { id: 5, name: 'Emma Rousseau' },
    { id: 6, name: 'Fran√ßois Dubois' },
    { id: 7, name: 'Sophie Laurent' },
    { id: 8, name: 'Marc Petit' }
  ];

  availableRoles: Role[] = [
    { id: 1, name: 'D√©veloppeur', color: '#2196F3' },
    { id: 2, name: 'Designer', color: '#E91E63' },
    { id: 3, name: 'Chef de projet', color: '#FF9800' },
    { id: 4, name: 'Testeur', color: '#4CAF50' },
    { id: 5, name: 'Product Owner', color: '#9C27B0' }
  ];

  constructor(
    private fb: FormBuilder,
    private snackBar: MatSnackBar
  ) {
    this.projectForm = this.fb.group({
      projectName: ['', Validators.required],
      budget: [''],
      description: ['']
    });
  }

  getAvailableUsers(): User[] {
    const addedUserIds = this.projectMembers.map(m => m.user.id);
    return this.availableUsers.filter(u => !addedUserIds.includes(u.id));
  }

  onUserSelected(): void {
    // Le champ r√¥le appara√Æt automatiquement
  }

  addMemberAuto(): void {
    if (this.selectedUser && this.selectedRole) {
      this.projectMembers.push({
        user: { ...this.selectedUser },
        role: { ...this.selectedRole }
      });

      this.selectedUser = null;
      this.selectedRole = null;

      this.snackBar.open('‚úì Membre ajout√©', '', {
        duration: 1500,
        horizontalPosition: 'end',
        verticalPosition: 'top',
        panelClass: ['success-snack']
      });
    }
  }

  removeMember(member: ProjectMember): void {
    const index = this.projectMembers.indexOf(member);
    if (index >= 0) {
      this.projectMembers.splice(index, 1);
    }
  }

  onSubmit(): void {
    if (this.projectForm.valid && this.projectMembers.length > 0) {
      const projectData = {
        ...this.projectForm.value,
        members: this.projectMembers
      };

      console.log('Donn√©es du projet:', projectData);

      this.snackBar.open('üéâ Projet cr√©√© avec succ√®s !', 'OK', {
        duration: 3000,
        horizontalPosition: 'center',
        verticalPosition: 'bottom'
      });

      this.projectForm.reset();
      this.projectMembers = [];
    }
  }

  cancel(): void {
    this.projectForm.reset();
    this.projectMembers = [];
    this.selectedUser = null;
    this.selectedRole = null;
  }
}
