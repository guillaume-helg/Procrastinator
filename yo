interface User {
  id: number;
  name: string;
  avatar?: string;
}

interface Role {
  id: number;
  name: string;
  color: string;
}

interface ProjectMember {
  user: User;
  role: Role;
}

@Component({
  selector: 'app-root',
  standalone: true,
  imports: [
    CommonModule,
    ReactiveFormsModule,
    MatFormFieldModule,
    MatSelectModule,
    MatButtonModule,
    MatIconModule,
    MatChipsModule,
    MatInputModule,
    MatSnackBarModule,
    MatAutocompleteModule,
    MatBadgeModule,
    FormsModule
  ],
  template: `
    <div class="container">
      <div class="header">
        <h2>Nouveau projet</h2>
        <span class="member-count" [matBadge]="projectMembers.length" matBadgeColor="accent">
          <mat-icon>people</mat-icon>
        </span>
      </div>

      <form [formGroup]="projectForm" (ngSubmit)="onSubmit()">

        <div class="form-grid">
          <mat-form-field appearance="outline">
            <mat-label>Nom du projet</mat-label>
            <input matInput formControlName="projectName" placeholder="Ex: Refonte site web">
            <mat-icon matPrefix>folder</mat-icon>
          </mat-form-field>

          <mat-form-field appearance="outline">
            <mat-label>Budget</mat-label>
            <input matInput type="number" formControlName="budget" placeholder="50000">
            <mat-icon matPrefix>euro</mat-icon>
            <span matSuffix>‚Ç¨</span>
          </mat-form-field>
        </div>

        <mat-form-field appearance="outline" class="full-width">
          <mat-label>Description</mat-label>
          <textarea matInput formControlName="description" rows="2"
                    placeholder="D√©crivez bri√®vement le projet..."></textarea>
          <mat-icon matPrefix>description</mat-icon>
        </mat-form-field>

        <!-- Section membres ultra-compacte -->
        <div class="members-compact">
          <div class="inline-add">
            <mat-form-field appearance="outline" subscriptSizing="dynamic">
              <mat-label>Ajouter un membre</mat-label>
              <mat-icon matPrefix>person_add</mat-icon>
              <mat-select [(ngModel)]="selectedUser" [ngModelOptions]="{standalone: true}"
                          (selectionChange)="onUserSelected()">
                <mat-option *ngFor="let user of getAvailableUsers()" [value]="user">
                  <div class="user-option">
                    <span>{{ user.name }}</span>
                  </div>
                </mat-option>
              </mat-select>
            </mat-form-field>

            <mat-form-field appearance="outline" subscriptSizing="dynamic" *ngIf="selectedUser">
              <mat-label>R√¥le</mat-label>
              <mat-select [(ngModel)]="selectedRole" [ngModelOptions]="{standalone: true}"
                          (selectionChange)="addMemberAuto()">
                <mat-option *ngFor="let role of availableRoles" [value]="role">
                  {{ role.name }}
                </mat-option>
              </mat-select>
            </mat-form-field>
          </div>

          <!-- Membres en chips inline -->
          <div class="members-chips" *ngIf="projectMembers.length > 0">
            <mat-chip-set>
              <mat-chip *ngFor="let member of projectMembers"
                        [removable]="true"
                        (removed)="removeMember(member)"
                        class="member-chip">
                <span class="chip-content">
                  <strong>{{ member.user.name }}</strong>
                  <span class="chip-role" >{{ member.role.name }}</span>
                </span>
                <button matChipRemove>
                  <mat-icon>close</mat-icon>
                </button>
              </mat-chip>
            </mat-chip-set>
          </div>
        </div>

        <!-- Actions -->
        <div class="form-actions">
          <button mat-stroked-button type="button" (click)="cancel()">
            Annuler
          </button>
          <button mat-raised-button color="primary" type="submit"
                  [disabled]="!projectForm.valid || projectMembers.length === 0">
            <mat-icon>check</mat-icon>
            Cr√©er le projet
          </button>
        </div>
      </form>
    </div>
  `,
  styles: [`
